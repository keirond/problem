{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.out",
            "args": [
                "-q"
            ],
            "stopOnEntry": false,
            "cwd": "${fileDirname}",
            "env": {
                "LSAN_OPTIONS": "detect_leaks=0"
            },
            "console": "integratedTerminal",
            "preLaunchTask": "C++ Debug Compile"
        }
    ]
}
