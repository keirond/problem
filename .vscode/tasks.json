{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Debug Compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-fsanitize=address",
                "-fno-omit-frame-pointer",
                "-Wall",
                "-Wextra",
                "-Wno-sign-compare",
                "-Wno-parentheses",
                "-O0",
                "-DINFO",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}