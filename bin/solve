#!/bin/bash

err_echo() {
	echo "$@" >&2
}

usage() {
	err_echo "Usage: solve <source_file>"
	exit 1
}

if [[ $# -ne 1 ]]; then
	usage
fi

source_file="$1"

echo "$source_file"

if [[ -z "$source_file" ]]; then
	err_echo "Error: No source file provided!"
	exit 1
fi

if [[ ! "$source_file" =~ ^.+\.cpp$ || ! -f "$source_file" ]]; then
	err_echo "Error: C++ file '$source_file' is invalid!"
	exit 1
fi

touch "$source_file"
subl "$source_file"
